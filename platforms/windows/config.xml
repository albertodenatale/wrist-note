<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wrist Note</name>
    <description>
	Stop writing notes on your wrist!
    </description>
    <author email="berto.dena@gmail.com" href="albertodenatale.com">
        Alberto De Natale
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon/windows/Square44x44Logo.scale-100.png" target="Square44x44Logo" />
    <splash src="res/screen/windows/SplashScreen.scale-100.png" target="SplashScreen" />
</widget>
